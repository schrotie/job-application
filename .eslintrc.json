{
	"extends": ["eslint:recommended", "google"],
	"env": {
		"browser": true
	},
	"plugins": [
		"html"
  ],
  "rules": {
		"brace-style": "off",
		"eol-last":"off",
		"parserOptions": { "ecmaVersion": 6 },
		"keyword-spacing": "off",
		"new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
		"no-empty":"off",
		"no-multi-spaces":"off",
		"no-tabs": "off",
		"no-var": "off",
		"padded-blocks":"off",
		"require-jsdoc": "off"
  },
  "globals": {
	  "Polymer": true
  }
}
